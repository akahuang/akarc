[color]
	ui = true
[core]
	quotepath = false
[gui]
	encoding = utf-8
[alias]
        br = branch
        co = checkout
        ci = commit -a
        st = status
        df = diff
        last = log -1 HEAD
        amend = commit -a --amend
        lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset \
             %s %Cgreen(%cr)%Creset' --abbrev-commit --date=relative
	ad = add .
